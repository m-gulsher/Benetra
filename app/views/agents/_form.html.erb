<div class="w-full max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md flex flex-col space-y-6" data-controller="nested-policies">
  <%= form_with model: @agent, local: true do |f| %>
    <h1 class="text-2xl font-semibold mb-4">
      <%= @agent.new_record? ? "Create Agent" : "Edit Agent" %>
    </h1>
    <div class="mb-4">
      <%= f.label :name, "Agent Name", class: "block text-gray-700 font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, "Agent Email", class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <% if Agency.all.any? %>
      <div class="mb-4">
        <%= f.label :agency_id, "Agency", class: "block text-gray-700 font-medium" %>
        <%= f.collection_select :agency_id, Agency.all, :id, :name, { prompt: "Select a Agency" }, class: "block w-full p-2 border border-gray-300 rounded-md", required: true %>
      </div>
    <% else %>
      <p class="text-red-500">No agencies are available. You can assign an agency once at least one agency is created.</p>
    <% end %>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-3">Policies</h2>
      <div data-nested-policies-target="container" class="space-y-4 max-h-96 overflow-y-auto">
        <%= f.fields_for :policies do |policy_fields| %>
          <div class="flex items-center space-x-4 bg-gray-50 p-4 rounded-md shadow" data-nested-policy="policy"
            data-policy-id="<%= policy_fields.object.new_record? ? 'new_policy_' + SecureRandom.hex(6) : policy_fields.object.id %>">
            <div class="flex-1">
              <%= policy_fields.label :name, "Policy Name", class: "block text-gray-700 font-medium" %>
              <%= policy_fields.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
            </div>
            <div class="flex-1">
              <%= policy_fields.label :description, "Policy Descriptiom", class: "block text-gray-700 font-medium" %>
              <%= policy_fields.text_field :description, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
            </div>
            <div>
              <%= policy_fields.check_box :_destroy, class: "hidden", id: "remove_policy_#{policy_fields.object.id}" %>
              <label
                data-action="click->nested-policies#removePolicy"
                data-id="<%= policy_fields.object.new_record? ? 'new_policy_' + SecureRandom.hex(6) : policy_fields.object.id %>"
                for="remove_policy_#{policy_fields.object.id}"
                class="cursor-pointer text-red-500">
                <i class="bi bi-trash text-xl"></i>
              </label>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <button
          data-action="click->nested-policies#addPolicy"
          class="text-blue-500 hover:underline"
          type="button">
          Add Policy
        </button>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit class: "px-6 py-2 bg-purple-500 text-white font-medium rounded-lg hover:bg-purple-600 w-full" %>
    </div>
  <% end %>
</div>
