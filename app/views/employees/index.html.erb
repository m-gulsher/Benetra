<div class="w-full">

  <% content_for :title, "Employees" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">
      <span class="mr-2 text-4xl"><i class="bi bi-person-circle text-lg"></i></span>
      Employees
    </h1>
    <div class="flex justify-between items-center">
      <% if can?(:manage, Employee) %>
        <%= link_to import_employees_path, class: "rounded-lg py-3 px-5 bg-green-500 text-white block font-medium mr-4" do %>
            <span class="mr-2 text-xl"><i class="bi bi-upload"></i></span>
            Import Employees
        <% end %>
        <%= link_to new_employee_path, class: "rounded-lg py-3 px-5 bg-purple-500 text-white block font-medium" do %>
          <span class="mr-2 text-xl">+</span>
          Add Employee
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="bg-white mt-6 py-2 px-4 flex justify-between items-center">
    <span class="text-sm text-gray-500">
      <i class="bi bi-clock mr-2"></i>
      Total Employees
    </span>
    <span class="text-lg font-semibold"><%= @total_count || Employee.count %></span>
  </div>

  <%= form_with url: employees_path, method: :get, local: true, class: "mt-6 flex justify-between items-center gap-4" do |f| %>
    <div class="flex items-center space-x-2">
      <div class="relative">
        <%= f.select :company_id, options_from_collection_for_select(@companies, :id, :name, @current_company_id),
            { include_blank: "All Companies" },
            { class: "block w-48 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" } %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <div class="relative w-64">
        <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-gray-500">
          <i class="bi bi-search"></i>
        </span>
        <%= f.text_field :search,
            value: @current_search,
            placeholder: "Search by name, email, or phone",
            class: "w-full pl-9 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" %>
      </div>
      <%= f.submit "Search", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      <% if @current_search.present? || @current_company_id.present? %>
        <%= link_to "Clear", employees_path, class: "px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6 overflow-x-auto">
    <table class="w-full min-w-max border border-collapse table-auto">
      <thead class="bg-gray-100">
        <tr>
          <th class="border px-4 py-2 text-left">Name</th>
          <th class="border px-4 py-2 text-left">Email</th>
          <th class="border px-4 py-2 text-center">Company</th>
          <th class="border px-4 py-2 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr class="hover:bg-gray-50">
            <td class="border px-4 py-2"><%= employee.name %></td>
            <td class="border px-4 py-2"><%= employee.email %></td>
            <td class="border px-4 py-2 text-center">
              <% if employee.company.present? %>
                <%= employee.company.name %>
              <% else %>
                <span class="text-yellow-500">No Company assigned</span>
              <% end %>
            </td>
            <td class="border px-4 py-2 text-center flex justify-start items-center">
              <% if can?(:edit, employee) %>
                <%= link_to edit_employee_path(employee), class: "text-gray-500 hover:text-gray-700 mr-3", title: "Edit" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if can?(:destroy, employee) %>
                <%= button_to employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-gray-500 hover:text-gray-700", title: "Delete" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @total_count && @total_count > 0 %>
    <%= pagination_info(@employees) %>
    <%= pagination_links(@employees) %>
  <% else %>
    <div class="mt-6 text-center text-gray-500">
      <% if @current_search.present? || @current_company_id.present? %>
        No employees found matching your search criteria.
      <% else %>
        No employees found. <%= link_to "Create one", new_employee_path, class: "text-blue-500 hover:underline" %>
      <% end %>
    </div>
  <% end %>
</div>
