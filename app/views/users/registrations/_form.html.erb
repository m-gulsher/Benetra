<%= form_for(@user, url: user_registration_path, data: { turbo_frame: "_top" }) do |f| %>
  <div class="flex justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-center text-2xl font-semibold text-gray-700 mb-4">Admin Sign Up</h2>

      <% if @user.errors.any? %>
        <div class="text-red-500 text-sm mb-4">
          <ul>
            <% @user.errors.full_messages.uniq.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :name, class: "mt-1 p-2 w-full border rounded-md focus:ring-indigo-500 focus:border-indigo-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.email_field :email, class: "mt-1 p-2 w-full border rounded-md focus:ring-indigo-500 focus:border-indigo-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, class: "mt-1 p-2 w-full border rounded-md focus:ring-indigo-500 focus:border-indigo-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password_confirmation, class: "mt-1 p-2 w-full border rounded-md focus:ring-indigo-500 focus:border-indigo-500", required: true %>
      </div>

      <%= f.hidden_field :role, value: "admin" %>

      <div>
        <%= f.submit "Sign Up", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50" %>
      </div>
    </div>
  </div>
<% end %>
