<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @policy %>

    <%= link_to "Edit this policy", edit_policy_path(@policy), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to policies", policies_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this policy", @policy, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
