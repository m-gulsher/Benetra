<div class="w-full max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md flex flex-col space-y-6">
  <%= form_with model: @policy, local: true do |f| %>
    <h1 class="text-2xl font-semibold mb-4">
      <%= @policy.new_record? ? "Create Policy" : "Edit Policy" %>
    </h1>
    <div class="mb-4">
      <%= f.label :name, "Policy Name", class: "block text-gray-700 font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md", required: true %>
    </div>
    <div class="mb-4">
      <%= f.label :description, "Policy Description", class: "block text-gray-700 font-medium" %>
      <%= f.text_field :description, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md", required: true %>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-3">Employees</h2>

      <% if @companies.present? %>
        <div class="mb-4">
          <%= f.label :company_id, "Company", class: "block text-gray-700 font-medium" %>
          <%= f.collection_select :company_id, @companies, :id, :name, { prompt: "Select a Company" }, class: "block w-full p-2 border border-gray-300 rounded-md", required: true %>
        </div>
      <% else %>
        <p class="text-red-500">No companies are available. You can assign a company once at least one company is created.</p>
      <% end %>

      <% if @agents.present? %>
        <div class="mb-4">
          <%= f.label :agent_id, "Agent", class: "block text-gray-700 font-medium" %>
          <%= f.collection_select :agent_id, @agents, :id, :name, { prompt: "Select an Agent" }, class: "block w-full p-2 border border-gray-300 rounded-md", required: true %>
        </div>
      <% else %>
        <p class="text-red-500">No agents are available. You can assign an agent once at least one agent is created.</p>
      <% end %>
    </div>

    <div class="mt-6">
      <%= f.submit class: "px-6 py-2 bg-purple-500 text-white font-medium rounded-lg hover:bg-purple-600 w-full" %>
    </div>
  <% end %>
</div>
