<div class="w-full">

  <% content_for :title, "Policies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">
      <span class="mr-2 text-4xl"><i class="bi bi-building text-lg"></i></span>
      Policies
    </h1>
    <% if can?(:create, Policy) %>
      <%= link_to new_policy_path, class: "rounded-lg py-3 px-5 bg-purple-500 text-white block font-medium" do %>
        <span class="mr-2 text-xl">+</span>
        Add Policy
      <% end %>
    <% end %>
  </div>

  <%= form_with url: policies_path, method: :get, local: true, class: "mt-6 flex justify-between items-center gap-4" do |f| %>
    <div class="flex items-center space-x-2">
      <div class="relative">
        <%= f.select :company_id, options_from_collection_for_select(@companies, :id, :name, @current_company_id),
            { include_blank: "All Companies" },
            { class: "block w-48 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" } %>
      </div>
      <div class="relative">
        <%= f.select :agent_id, options_from_collection_for_select(@agents, :id, :name, @current_agent_id),
            { include_blank: "All Agents" },
            { class: "block w-48 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" } %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <div class="relative w-64">
        <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-gray-500">
          <i class="bi bi-search"></i>
        </span>
        <%= f.text_field :search,
            value: @current_search,
            placeholder: "Search by name or description",
            class: "w-full pl-9 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" %>
      </div>
      <%= f.submit "Search", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      <% if @current_search.present? || @current_company_id.present? || @current_agent_id.present? %>
        <%= link_to "Clear", policies_path, class: "px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6 overflow-x-auto">
    <table class="w-full min-w-max border border-collapse table-auto">
      <thead class="bg-gray-100">
        <tr>
          <th class="border px-4 py-2 text-left">Name</th>
          <th class="border px-4 py-2 text-left">Description</th>
          <th class="border px-4 py-2 text-center">Agent</th>
          <th class="border px-4 py-2 text-center">Company</th>
          <th class="border px-4 py-2 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @policies.each do |policy| %>
          <tr class="hover:bg-gray-50">
            <td class="border px-4 py-2"><%= policy.name %></td>
            <td class="border px-4 py-2"><%= policy.description %></td>
            <td class="border px-4 py-2 text-center">
              <% if policy.agent.present? %>
                <%= policy.agent.name %>
              <% else %>
                <span class="text-yellow-500">No agent assigned</span>
              <% end %>
            </td>
            <td class="border px-4 py-2 text-center">
              <% if policy.company.present? %>
                <%= policy.company.name %>
              <% else %>
                <span class="text-yellow-500">No company assigned</span>
              <% end %>
            </td>
            <td class="border px-4 py-2 text-center flex justify-start items-center">
              <% if can?(:edit, policy) %>
                <%= link_to edit_policy_path(policy), class: "text-gray-500 hover:text-gray-700 mr-3", title: "Edit" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if can?(:destroy, policy) %>
                <%= button_to policy_path(policy), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-gray-500 hover:text-gray-700", title: "Delete" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @total_count && @total_count > 0 %>
    <%= pagination_info(@policies) %>
    <%= pagination_links(@policies) %>
  <% else %>
    <div class="mt-6 text-center text-gray-500">
      <% if @current_search.present? || @current_company_id.present? || @current_agent_id.present? %>
        No policies found matching your search criteria.
      <% else %>
        No policies found. <%= link_to "Create one", new_policy_path, class: "text-blue-500 hover:underline" %>
      <% end %>
    </div>
  <% end %>
</div>
