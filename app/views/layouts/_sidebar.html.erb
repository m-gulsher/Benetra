<div class="flex flex-col h-screen bg-gray-50 border-r">
  <div class="flex-grow overflow-y-auto p-4">
    <nav class="space-y-4">
      <h5 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Main</h5>
      <%= link_to agencies_path, class: "flex items-center text-gray-700 hover:bg-gray-100 rounded p-2 transition" do %>
        <span class="mr-2"><i class="bi bi-person text-lg"></i></span>
        <span class="text-sm">Agencies</span>
      <% end %>
      <%= link_to companies_path, class: "flex items-center text-gray-700 hover:bg-gray-100 rounded p-2 transition" do %>
        <span class="mr-2"><i class="bi bi-building text-lg"></i></span>
