<div class="w-full">

  <% content_for :title, "Companies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">
      <span class="mr-2 text-4xl"><i class="bi bi-building text-lg"></i></span>
      Companies
    </h1>
    <% if can?(:create, Company) %>
      <%= link_to new_company_path, class: "rounded-lg py-3 px-5 bg-purple-500 text-white block font-medium" do %>
        <span class="mr-2 text-xl">+</span>
        Add Company
      <% end %>
    <% end %>
  </div>

  <%= form_with url: companies_path, method: :get, local: true, class: "mt-6 flex justify-end items-center gap-4" do |f| %>
    <div class="flex items-center gap-2">
      <div class="relative w-64">
        <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-gray-500">
          <i class="bi bi-search"></i>
        </span>
        <%= f.text_field :search,
            value: @current_search,
            placeholder: "Search by name, email, or POC email",
            class: "w-full pl-9 py-2 px-3 bg-gray-100 border border-gray-300 rounded-md text-sm" %>
      </div>
      <%= f.submit "Search", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      <% if @current_search.present? %>
        <%= link_to "Clear", companies_path, class: "px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6 overflow-x-auto">
    <table class="w-full min-w-max border border-collapse table-auto">
      <thead class="bg-gray-100">
        <tr>
          <th class="border px-4 py-2 text-left">Name</th>
          <th class="border px-4 py-2 text-left">Email</th>
          <th class="border px-4 py-2 text-left">Phone</th>
          <th class="border px-4 py-2 text-left">POC Email</th>
          <th class="border px-4 py-2 text-left">No. of Employees</th>
          <th class="border px-4 py-2 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr class="hover:bg-gray-50">
            <td class="border px-4 py-2"><%= company.name %></td>
            <td class="border px-4 py-2"><%= company.email %></td>
            <td class="border px-4 py-2"><%= company.phone %></td>
            <td class="border px-4 py-2"><%= company.poc_email %></td>
            <td class="border px-4 py-2"><%= company.employees.count %></td>
            <td class="border px-4 py-2 text-center flex justify-start items-center">
              <% if can?(:edit, company) %>
                <%= link_to edit_company_path(company), class: "text-gray-500 hover:text-gray-700 mr-3", title: "Edit" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if can?(:destroy, company) %>
                <%= button_to company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-gray-500 hover:text-gray-700", title: "Delete" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @total_count && @total_count > 0 %>
    <%= pagination_info(@companies) %>
    <%= pagination_links(@companies) %>
  <% else %>
    <div class="mt-6 text-center text-gray-500">
      <% if @current_search.present? %>
        No companies found matching your search criteria.
      <% else %>
        No companies found. <%= link_to "Create one", new_company_path, class: "text-blue-500 hover:underline" %>
      <% end %>
    </div>
  <% end %>
</div>
