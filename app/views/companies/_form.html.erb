<div class="w-full max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md flex flex-col space-y-6" data-controller="nested-employees nested-policies">
  <%= form_with model: @company, local: true do |f| %>
    <h1 class="text-2xl font-semibold mb-4">
      <%= @company.new_record? ? "Create Company" : "Edit Company" %>
    </h1>
    <div class="mb-4">
      <%= f.label :name, "Company Name", class: "block text-gray-700 font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, "Company Email", class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="mb-4">
      <%= f.label :phone, "Phone Number", class: "block text-gray-700 font-medium" %>
      <%= f.telephone_field :phone, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="mb-4">
      <%= f.label :poc_email, "POC Email", class: "block text-gray-700 font-medium" %>
      <%= f.email_field :poc_email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-3">Employees</h2>
      <div data-nested-employees-target="container" class="space-y-4 max-h-96 overflow-y-auto"> <!-- Added max-height and overflow -->
        <%= f.fields_for :employees do |employee_fields| %>
          <div class="flex items-center space-x-4 bg-gray-50 p-4 rounded-md shadow" data-nested-employee="employee"
            data-employee-id="<%= employee_fields.object.new_record? ? 'new_employee_' + SecureRandom.hex(6) : employee_fields.object.id %>">
            <div class="flex-1">
              <%= employee_fields.label :name, "Employee Name", class: "block text-gray-700 font-medium" %>
              <%= employee_fields.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
            </div>
            <div class="flex-1">
              <%= employee_fields.label :email, "Employee Email", class: "block text-gray-700 font-medium" %>
              <%= employee_fields.email_field :email, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md" %>
            </div>
            <div>
              <%= employee_fields.check_box :_destroy, class: "hidden", id: "remove_employee_#{employee_fields.object.id}" %>
              <label
                data-action="click->nested-employees#removeEmployee"
                data-id="<%= employee_fields.object.new_record? ? 'new_employee_' + SecureRandom.hex(6) : employee_fields.object.id %>"
                for="remove_employee_#{employee_fields.object.id}"
                class="cursor-pointer text-red-500">
                <i class="bi bi-trash text-xl"></i>
              </label>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <button
          data-action="click->nested-employees#addEmployee"
          class="text-blue-500 hover:underline"
          type="button">
          Add Employee
        </button>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit class: "px-6 py-2 bg-purple-500 text-white font-medium rounded-lg hover:bg-purple-600 w-full" %>
    </div>
  <% end %>
</div>
